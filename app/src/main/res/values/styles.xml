<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>

        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>

        <!--        <item name="android:textColorPrimary">@color/error</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <!-- Auth -->

    <style name="AppTheme.Auth" parent="AppTheme">
        <item name="appWindowPadding">@dimen/paddingWindow</item>
        <item name="appViewInListIndent_small">@dimen/marginBetweenViewSmall</item>
        <item name="appViewInListIndent_medium">@dimen/marginBetweenViewMedium</item>
    </style>

    <style name="Widget.Auth.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.Auth.TextInput" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Widget.Auth.ActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginBetweenViewMedium</item>
        <item name="android:padding">@dimen/paddingActionButton</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Widget.Auth.LinkButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/marginBetweenViewSmall</item>
    </style>

</resources>
