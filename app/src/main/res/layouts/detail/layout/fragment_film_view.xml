<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.detail.film.view.ViewFilmFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="8dp">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_image_black_24dp" />

        <TextView
            android:id="@+id/detailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/detailImage"
            tools:text="@string/detail_prompt_name" />

        <TextView
            android:id="@+id/detailYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailName"
            android:layout_alignStart="@id/detailName"
            android:layout_marginTop="16dp"
            tools:text="@string/detail_prompt_year" />

        <TextView
            android:id="@+id/detailGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailYear"
            android:layout_alignStart="@+id/detailYear"
            android:layout_marginTop="16dp"
            tools:text="@string/detail_prompt_genre" />

        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailImage"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            tools:text="@string/detail_prompt_description" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
